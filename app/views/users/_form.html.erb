<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow-lg p-3 mt-2 mb-3 bg-warning rounded",local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label font-weight-bold"%>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow-sm rounded", placeholder: "Enter a username" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold"%>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your user address" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold"%>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Choose your password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Sign up", class: "btn btn-outline-dark btn-lg text-light rounded-lg"%>
      </div>

      <% end %>
    </div class="mb-3">
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info font-weight-bold" %>
  </div>
</div>

