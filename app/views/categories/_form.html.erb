<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow-lg p-3 mt-2 mb-3 bg-warning rounded",local: true) do |f| %>

<div class="form-group row">
  <%= f.label :name, "Category name" class: "col-2 col-form-label font-weight-bold"%>
  <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow-sm rounded", placeholder: "Enter a category name" %>
  </div>
</div>

<div class="form-group row justify-content-center">
  <%= f.submit class: "btn btn-outline-dark btn-lg text-light rounded-lg" %>
</div>

<% end %>