<h1 class="text-center mt-4">Log in to Alpha Blog</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow-lg p-3 mt-2 mb-3 bg-warning rounded",local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold"%>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your user address" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold"%>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "btn btn-outline-dark btn-lg text-light rounded-lg" %>
      </div>

      <% end %>
    </div class="mb-3">
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info font-weight-bold" %>
  </div>
</div>

